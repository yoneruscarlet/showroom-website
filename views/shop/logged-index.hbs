{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-3 co l-md-4 box">
                <div class="thumbnail box">
                    <img src=" {{#each this}} {{ imagePath }} {{/each}} " alt="..." class ="img-responsive">
                    <div class="caption">
                        <h3> {{#each this}} {{ title }} {{/each}} </h3>
                        <p class="description"> {{#each this}} {{ description }} {{/each}} </p>
                        <div class="clearfix">
                            <div class ="price pull-left"> {{#each this}}{{ price }}{{/each}}ƒê </div>
                            <a href="/user/update" class="btn btn-success pull-right" role="button">Update</a>
                            <p class="hidden text" id="pid" name="pid">{{#each this}}{{ _id }}{{/each}}</p>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}